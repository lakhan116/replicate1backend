<!DOCTYPE html>
<html>
<head>
  <title>AI Image Generator</title>
</head>
<body>
  <h1>Generate Image from Prompt</h1>
  <input type="text" id="prompt" placeholder="Type your prompt" />
  <button onclick="generateImage()">Generate</button>
  <div id="output"></div>

  <script>
    async function generateImage() {
      const prompt = document.getElementById("prompt").value;
      const response = await fetch("https://api.replicate.com/v1/predictions", {
        method: "POST",
        headers: {
          "Authorization": "Token r8_LE7hbEjCA97fBXJWIkOBnUDwOcD03hU49DFv9",  // ← अपना token
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          version: "db21e45c-7f1c-41d4-9010-49b58e29d3b9", // ← SDXL का version ID
          input: { prompt: prompt }
        })
      });

      const prediction = await response.json();
      console.log(prediction);
      document.getElementById("output").innerText = "Check console for output";
    }
  </script>
</body>
</html>
